pipeline{
     agent{
     label 'imageidentificationfront'
     }
     environment{     
    DOCKERHUB_CREDENTIALS= credentials('dockerhub_id')     
} 
     stages{
         stage('Checkout') {
          steps{ 
          pwd
          git branch: 'main', url: 'https://github.com/abhijitchavan408/image-identification-ui.git'
               }
          }
      
          stage('Docker build'){
          steps{
          pwd
               sh 'docker image build -t sumithpe/imageidentifrontapp:31 .'
               }  
          }
          
          
          stage('Docker push'){
          steps{
               sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                        sh 'docker image push sumithpe/imageidentifrontapp:31' 
          }
          }    
     }
}
